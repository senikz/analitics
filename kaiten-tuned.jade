mixin Badge(method)
    //- Draw a badge for a given HTTP method
    case method
        when 'GET'
            span.badge.get
        when 'HEAD'
            span.badge.head
        when 'OPTIONS'
            span.badge.options
        when 'POST'
            span.badge.post
        when 'PUT'
            span.badge.put
        when 'PATCH'
            span.badge.patch
        when 'DELETE'
            span.badge.delete
        default
            span.badge

mixin Nav()
